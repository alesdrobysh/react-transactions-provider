{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "tests",
    "src/**/*.spec.*"
  ]
}
